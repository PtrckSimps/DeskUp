    <script>
        $(document).ready(function(){
            $("button.commentLoginbutton").click(function(){
                let name = $(this).attr('name')
                let comment = $(".commentNow").val()
                let title = $("#postTitle").val()
                let id = $("#postID").val()

                $.ajax({
                    url: "../comment",
                    method: "post",
                    data: {
                        id: id,
                        name: name,
                        comment: comment,
                        title: title
                    },
                    success : function(c){
                        console.log("comment was: " + c)
                        if(c){
                            let parent = document.getElementById("parentContainer")
                            let commentdiv = document.createElement("div")
                            let commentText = document.createElement("div")
                            let h5 = document.createElement("h5")
                            let span1 = document.createElement("span")
                            let span2 = document.createElement("span")
                            let commentfooter = document.createElement("div")  
                            let date = c.date
                            commentdiv.className = "d-flex flex-row comment-row m-t-0 border-bottom"
                            commentText.className = "comment-text w-100"
                            h5.className = "font-medium"
                            span1.className = "text-muted float-right"
                            span2.className = "m-b-15 d-block"
                            commentfooter.className = "comment-footer float-right"

                            h5.innerHTML = name
                            span1.innerHTML = c
                            span2.innerHTML = comment

                            commentText.appendChild(h5)
                            commentText.appendChild(span1)
                            commentText.appendChild(span2)
                            commentText.appendChild(commentfooter)

                            commentdiv.appendChild(commentText)

                            parent.append(commentdiv)

                        }
                    }
                })
            })
        })
            
